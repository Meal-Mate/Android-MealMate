    <com.mukesh.OtpView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        app:OtpItemSpacing="10dp"
        android:inputType="numberPassword"
        android:focusable="true"
        android:itemBackground="@drawable/bg_nft_ed_otp"
        android:textColor="@color/colorNeutral500"
        app:OtpItemCount="6"
        app:OtpViewType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_continue"
        style="@style/ButtonStylePrimary"
        android:background="@drawable/bg_nft_btn_primary"
        android:backgroundTint="@null"
        android:text="Confirm"
        app:backgroundTint="@null"
        android:layout_marginBottom="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

