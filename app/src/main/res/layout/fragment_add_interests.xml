<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView"
        style="@style/TxtMealMate.Bold24"
        android:layout_marginTop="20dp"
        android:text="Lets choose your prefered \ninterrests!"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        style="@style/TxtMealMate.Medium14"
        android:layout_width="0dp"
        android:text="Select your food interests to find and match with individuals who share the same interests in food."
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="413dp"
        android:layout_height="264dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2">

        <TextView
            android:id="@+id/title1"
            style="@style/TxtMealMate.Bold24"
            android:layout_marginTop="15dp"
            android:text="Food preferences:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_mealmate_outline_secondary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp">


            <TextView
                android:id="@+id/vegetarian"
                style="@style/TxtMealMate.Semibold16"
                android:layout_width="match_parent"
                android:layout_marginStart="12dp"
                android:text="vegetarian"
                android:textColor="@color/colorNeutral500" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_mealmate_outline_secondary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp">


            <TextView
                android:id="@+id/carnivorous"
                style="@style/TxtMealMate.Semibold16"
                android:layout_width="match_parent"
                android:layout_marginStart="12dp"
                android:text="carnivorous"
                android:textColor="@color/colorNeutral500" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_mealmate_outline_secondary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp">


            <TextView
                android:id="@+id/gluten_free"
                style="@style/TxtMealMate.Semibold16"
                android:layout_width="match_parent"
                android:layout_marginStart="12dp"
                android:text="gluten-free"
                android:textColor="@color/colorNeutral500" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="413dp"
        android:layout_height="264dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1">

        <TextView
            android:id="@+id/title2"
            style="@style/TxtMealMate.Bold24"
            android:layout_marginTop="15dp"
            android:text="Cuisine preferences"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_mealmate_outline_secondary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp">


            <TextView
                android:id="@+id/Italian"
                style="@style/TxtMealMate.Semibold16"
                android:layout_width="match_parent"
                android:layout_marginStart="12dp"
                android:text="Italian"
                android:textColor="@color/colorNeutral500" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_mealmate_outline_secondary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp">


            <TextView
                android:id="@+id/Mexican"
                style="@style/TxtMealMate.Semibold16"
                android:layout_width="match_parent"
                android:layout_marginStart="12dp"
                android:text="Mexican"
                android:textColor="@color/colorNeutral500" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_mealmate_outline_secondary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp">


            <TextView
                android:id="@+id/Chinese"
                style="@style/TxtMealMate.Semibold16"
                android:layout_width="match_parent"
                android:layout_marginStart="12dp"
                android:text="Chinese"
                android:textColor="@color/colorNeutral500" />

        </LinearLayout>

    </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="413dp"
                android:layout_height="264dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout2">

                <TextView
                    android:id="@+id/title3"
                    style="@style/TxtMealMate.Bold24"
                    android:layout_marginTop="15dp"
                    android:text="Hobbies"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_mealmate_outline_secondary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="16dp">


                    <TextView
                        android:id="@+id/cooking"
                        style="@style/TxtMealMate.Semibold16"
                        android:layout_width="match_parent"
                        android:layout_marginStart="12dp"
                        android:text="Cooking"
                        android:textColor="@color/colorNeutral500" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_mealmate_outline_secondary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="16dp">


                    <TextView
                        android:id="@+id/wine_tasting"
                        style="@style/TxtMealMate.Semibold16"
                        android:layout_width="match_parent"
                        android:layout_marginStart="12dp"
                        android:text="Wine tasting"
                        android:textColor="@color/colorNeutral500" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_mealmate_outline_secondary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="16dp">


                    <TextView
                        android:id="@+id/Trying"
                        style="@style/TxtMealMate.Semibold16"
                        android:layout_width="match_parent"
                        android:layout_marginStart="12dp"
                        android:text="trying new restaurants"
                        android:textColor="@color/colorNeutral500" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_add"
                style="@style/ButtonStylePrimary"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_mealmate_primary_selector"
                android:backgroundTint="@null"
                android:enabled="true"
                android:text="Add Interests"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
                app:layout_constraintBottom_toTopOf="@+id/tv_skip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/tv_skip"
        style="@style/TxtMealMate.Medium14"
        android:text="Skip for now"
        android:textColor="@color/colorNeutral300"
        app:layout_constraintTop_toBottomOf="@id/btn_add"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>

