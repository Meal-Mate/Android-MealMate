<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MealMate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorEdgeEffect">@color/colorBrandMealMate500</item>
        <item name="android:textCursorDrawable">@drawable/bg_mealmate_cursor_text_input</item>

    </style>

    <!--<<<<<<<<<<<<<<<<<<<<<<<<<< BUTTON STYLE >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="ButtonStylePrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="ButtonStyleSecondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textColor">@color/colorNeutral300</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <!--<<<<<<<<<<<<<<<<<<<<<<<<<< IMAGE STYLE >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="ImageBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:src">@drawable/ic_mealmate_arrow_left</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <!--<<<<<<<<<<<<<<<<<<<<<<<<<< TEXT STYLE >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="TxtMealMate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

